<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MeasureActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="20dp"
            android:drawableRight="@drawable/baseline_start_24"
            android:textStyle="bold"
            android:text="Measuring tool  "
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:id="@+id/points"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:text="Output:"
            android:padding="20dp"
            android:id="@+id/output"

            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#3C88B5"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Capture point"
                android:id="@+id/addPoint"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#3C88B5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Calculate"
                android:id="@+id/calculate"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#3C88B5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Save"
                android:id="@+id/save"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Move to all vertexes on the property to capture the coordinate points and click on calculate to measure"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>