<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.cardview.widget.CardView
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="0dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="7dp"
            android:layout_gravity="bottom|right"
            app:cardElevation="-1dp"
            app:cardCornerRadius="3.5dp"
            android:alpha="0.3"
            android:id="@+id/indicator"
            android:layout_margin="10dp"
            android:layout_height="7dp"/>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="160dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                android:src="#3C88B5"
                android:id="@+id/image"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:layout_marginLeft="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="12dp"
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_access_time_filled_24"
                        android:layout_height="12dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        tools:text="10/12/2023"
                        android:id="@+id/time"
                        android:textSize="12dp"
                        android:textColor="#3C88B5"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"/>


                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatTextView

                    tools:text="Bungalow"
                    android:maxLines="1"
                    android:id="@+id/buildingType"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>





                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">



                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="2dp"
                        android:background="#3C88B5"
                        android:layout_height="55dp"/>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:layout_marginLeft="5dp"
                        android:layout_height="match_parent">



                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center|left"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="10dp"
                                android:src="@drawable/baseline_local_phone_24"
                                android:layout_height="10dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/phoneNumber"
                                android:layout_width="match_parent"
                                android:layout_marginRight="10dp"
                                tools:text="08133322255"
                                android:textSize="12dp"
                                android:layout_marginLeft="5dp"
                                android:layout_height="wrap_content"/>


                        </androidx.appcompat.widget.LinearLayoutCompat>




                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center|left"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="10dp"
                                android:src="@drawable/baseline_category_24"
                                android:layout_height="10dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/buildingCategory"
                                android:layout_width="match_parent"
                                android:layout_marginRight="10dp"
                                tools:text="Medium sized building"
                                android:layout_marginLeft="5dp"
                                android:textSize="12dp"
                                android:layout_height="wrap_content"/>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center|left"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="10dp"
                                android:src="@drawable/baseline_photo_size_select_small_24"
                                android:layout_height="10dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/buildingSize"
                                android:layout_width="match_parent"
                                android:layout_marginRight="10dp"
                                tools:text="40 X 40"
                                android:textSize="12dp"
                                android:layout_marginLeft="5dp"
                                android:layout_height="wrap_content"/>


                        </androidx.appcompat.widget.LinearLayoutCompat>





                    </androidx.appcompat.widget.LinearLayoutCompat>



                </androidx.appcompat.widget.LinearLayoutCompat>






                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="12dp"
                       android:src="@drawable/baseline_location_on_24"
                        android:layout_height="12dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        tools:text="Building Address"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"/>


                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>